<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.drug.dao.IDrugDao">
<insert id="insert">
insert into drug values(#{pn},#{name},#{price},#{origin},#{content},#{inventory},#{sellable},default,ps_seq.nextval)
</insert>
<select id="selectAll" resultType="drugDto">
select * from drug
</select>
<select id="selectName" resultType="drugDto">
select * from drug where pn=#{pn}
</select>
<update id ="update_inventory">
update drug set inventory=#{inventory} where pn=#{pn}
</update>
<update id="update">
update drug set name=#{name},price=#{price},origin=#{origin},content=#{content},inventory=#{inventory},sellable=#{sellable},regdate=sysdate where pn=#{pn}
</update>
<delete id="delete">
delete drug where pn=#{pname}
</delete>

<!-- ![CDATA는 []괄호 안에 있는것은 일반 문자열을 기술한것이다. -->
<select id="listSearch" resultType="com.drug.dto.DrugDto">
<![CDATA[select * from (select rownum rn,a.*
    from (
        select drug.*
        from drug
        where content!= 'vip'  ]]>
<!-- ![CDATA[select bno, title, content, writer, viewcnt, regdate from (select rownum rn,a.*
    from (
        select tbl_board.*
        from tbl_board 
        where 1=1  ]]-->
<!-- include 는 refid 옆에 입력한 search를 찾아간다 위에 sql id='search'로 찾아간다. -->         
<!--  include refid="search"/-->
<![CDATA[   order by pn desc) a where rownum<=#{page} * #{perPageNum}) b
	where rn>(#{page} -1) * #{perPageNum}]]>
</select>
<select id="listSearch_VIP" resultType="com.drug.dto.DrugDto">
<![CDATA[select * from (select rownum rn,a.*
    from (
        select drug.*
        from drug
        where 1=1  ]]>
<!-- ![CDATA[select bno, title, content, writer, viewcnt, regdate from (select rownum rn,a.*
    from (
        select tbl_board.*
        from tbl_board 
        where 1=1  ]]-->
<!-- include 는 refid 옆에 입력한 search를 찾아간다 위에 sql id='search'로 찾아간다. -->         
<!--  include refid="search"/-->
<![CDATA[   order by pn desc) a where rownum<=#{page} * #{perPageNum}) b
	where rn>(#{page} -1) * #{perPageNum}]]>
</select>


<select id="listSearchCount" resultType="int">
<![CDATA[ select count(pn) from drug where content!='vip' ]]>
<!-- include refid="search"/-->
<![CDATA[ and pn > 0 ]]>
</select>
<select id="listSearchCount_VIP" resultType="int">
<![CDATA[ select count(pn) from drug where 1=1 ]]>
<!-- include refid="search"/-->
<![CDATA[ and pn > 0 ]]>
</select>


</mapper>